generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Board {
  id       Int    @id @default(autoincrement())
  title    String
  category String
  author   String
  imageURL String 
  cards    Card[]
  createdAt DateTime @default(now())
}

model Card {
  id          Int   @id @default(autoincrement())
  author      String 
  imageURL    String 
  upvotes     Int 
  boardId     Int
  title       String 
  description String 
  board       Board @relation(fields: [boardId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}
